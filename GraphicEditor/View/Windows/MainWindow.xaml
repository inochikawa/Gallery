<Window x:Class="GraphicEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:GraphicEditor.View.UserControls"
        Background="#3b3b3b"
        Style="{DynamicResource ResourceKey=FlatWindow}"
        Title="" Height="500" Width="800"
        WindowStartupLocation="CenterScreen" KeyDown="Window_KeyDown">
    <Grid>
        <Canvas x:Name="backgroundCanvas"
                Background="Transparent" MouseMove="backgroundCanvas_MouseMove"
                >
        </Canvas>

        <Menu Height="25"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Margin="0,-35,75,0"
              Background="Transparent">
            <MenuItem Header="File"
                      FontFamily="Century Gothic"
                      Foreground="White">
                <MenuItem x:Name="openFileMenuItem"
                          Header="Open" Foreground="Black"
                          Command="{Binding OpenImage}">
                    <MenuItem.Icon>
                        <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-folder-open.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <MenuItem Header="Image"
                      FontFamily="Century Gothic"
                      Foreground="White">
                <MenuItem x:Name="imageProperties"
                          Header="Propeties" Foreground="Black" Click="imageProperties_Click"
                          >
                    <MenuItem.Icon>
                        <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-properties.png"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <MenuItem ToolTip="Undo"
                      Width="25"
                      Command="{Binding UndoCommand}">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/UndoRedo/undo.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
            <MenuItem ToolTip="Redo"
                      Width="25"
                      Command="{Binding RedoCommand}">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/UndoRedo/redo.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <Separator Style="{StaticResource {x:Static ToolBar.SeparatorStyleKey}}"/>
        </Menu>
        
