        <Menu Width="25"
              Height="auto"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Left"
              x:Name="menuPanel"
              Opacity=".3"
              Margin="5,40,0,50"
              >
            <Menu.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </Menu.ItemsPanel>
            <Menu.Resources>
                <Storyboard x:Key="opacityEffectIn">
                    <DoubleAnimation Storyboard.TargetName="menuPanel"
                             Storyboard.TargetProperty="Opacity"
                             To="1"
                             Duration="0:0:.3">
                    </DoubleAnimation>
                </Storyboard>
                <Storyboard x:Key="opacityEffectOut">
                    <DoubleAnimation Storyboard.TargetName="menuPanel"
                             Storyboard.TargetProperty="Opacity"
                             To=".3"
                             Duration="0:0:.3">
                    </DoubleAnimation>
                </Storyboard>
            </Menu.Resources>
            <Menu.Triggers>
                <EventTrigger RoutedEvent="MouseEnter">
                    <BeginStoryboard Storyboard="{StaticResource opacityEffectIn}"/>
                </EventTrigger>
                <EventTrigger RoutedEvent="MouseLeave">
                    <BeginStoryboard Storyboard="{StaticResource opacityEffectOut}"/>
                </EventTrigger>
            </Menu.Triggers>
            <MenuItem  Height="25"
                       Header="Open"
                       ToolTip="Open">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-folder-open.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem  Height="25"
                       Header="Save"
                       ToolTip="Save">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-save.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem  Height="25"
                       Header="Pointer"
                       ToolTip="Pointer"
                       Command="{Binding PointerToolSelectedCommand}">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-cursor-pointer.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem  Height="25"
                       Header="Brush"
                       ToolTip="Brush"
                       Command="{Binding BrushToolSelectedCommand}">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-brush.png"/>
                </MenuItem.Icon>
            </MenuItem>
            <MenuItem  Height="25"
                       Header="Line"
                       ToolTip="Line"
                       Command="{Binding LineToolSelectedCommand}">
                <MenuItem.Icon>
                    <Image Source="/GraphicEditor;component/View/Resources/Images/MainWindowMenu/image-line.png"/>
                </MenuItem.Icon>
            </MenuItem>
        </Menu>

        <Expander Template="{DynamicResource RevealExpanderTemp}"
                  OverridesDefaultStyle="True"
                  Header="Color picker"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Background="White">
        </Expander>

        <controls:ChildWindow Width="250"
                              Height="250"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"
                              Header="Color picker">
            <controls:ChildWindow.RenderTransform>
                <TranslateTransform X="500"
                                        Y="0"/>
            </controls:ChildWindow.RenderTransform>
            
            <controls:ColorPicker></controls:ColorPicker>
        </controls:ChildWindow>
    </Grid>
</Window>
